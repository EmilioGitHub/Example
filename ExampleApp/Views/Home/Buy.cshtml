@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Buy</title>
</head>
<body>
    <div>
        <h3>Покупка товара</h3>
        <form method="post" action="">
            <input type="hidden" value="@ViewBag.Id" name="Id" />
            <p>Введите имя: </p>
            <p><input type="text" name="Customer" placeholder="Ваше имя..." /></p>
            <p>Введите адрес: </p>
            <p><input type="text" name="Address" placeholder="Ваш адрес..." /></p>
            <p><input type="submit" value="Принять" /></p>
        </form>
    </div>
</body>
</html>